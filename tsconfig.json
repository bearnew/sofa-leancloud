{
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./client",
    "paths": {
      "pages/*": [
        "pages/*"
      ],
      "components/*": [
        "components/*"
      ],
      "routers/*": [
        "routers/*"
      ],
    }
  },
  "include": [
    "client"
  ],
  "exclude": [
    "node_modules",
    "server"
  ]
}